<view class="post-list">
  <block wx:for="{{posts}}" wx:key="post_id">
    <view class="post-item" data-id="{{item.post_id}}" bindtap="navigateToDetail">
      <view class="post-header">
        <image class="post-avatar" src="{{item.avatar}}" />
        <view class="post-info">
         <view style="padding-bottom:6rpx;">
          <text class="post-author">{{item.author}}</text>
         </view>
         <view class="circle-container">
           <image src="{{item.circle_avatar}}" class="circle-icon"/>
           <text class="post-type">{{item.circle_name}}</text>
           <text class="post-date">{{item.created_at}}</text>
         </view>
        </view>
        <view class="post-actions">
          <text class="post-report">. . .</text>
        </view>
      </view>
      <text class="post-title">{{item.title}}</text>
      <view class="post-images">
        <block wx:for="{{item.images}}" wx:key="*this">
          <image class="post-image" src="{{item}}" />
        </block>
      </view>
      <view class="container-content">
        <text class="post-content">{{item.content}}</text>
      </view>
     
      <view class="post-footer">
        <image class="post-icon" src="/images/like.png" />
        <image class="post-icon" src="/images/comment.png" />
        <image class="post-icon" src="/images/favorite.png" />
      </view>
    </view>
  </block>
</view>
