.container {
  padding: 10px;
  background-color: #ffff;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  padding: 20rpx;
}

.author{
  font-size: 16px;
  font-weight: bold;
  color: #a8abac;
}

.title{
  font-size: 18px;
  font-weight: bold;
}

.content{
  margin-top: 20rpx;
  line-height: 1.7;
}

.circle_name{
  font-size: 13px;
  color: #9bdd87;
  padding: 10rpx 0rpx;
}

.time{
  font-size: 13px;
  color: #9b9c9c;
  padding-left: 20rpx;
}
.post-images {
  display: flex;
  margin-bottom: 10px;
  flex-wrap: wrap;
}

.post-image {
  width: 100px;
  height: 100px;
  margin-right: 5px;
  object-fit: cover; /* 保持图片比例，只显示中间部分 */
  border-radius: 5px;
}

.post-footer {
  width: 100%;
  display: flex;
  justify-content: space-around;
  padding-top: 8px;
  border-bottom: solid 2px #f5f5f5;
}

.post-icon {
  width: 25px;
  height: 25px;
  padding: 8rpx;
}

.comments {
  margin-top: 20rpx;
}

.comment{
  margin-top: 10rpx;
  padding: 10rpx;
  border-bottom: 1px solid #ddd;
}

.subcomment {
  margin-left: 70rpx;
  background-color: #f5f5f5;
  margin-top: 10rpx;
  border-bottom: 1px solid #ddd;
}

.comment-content{
  margin-left: 10rpx;
}

.subcomment-avator{
  width: 20rpx;
  height: 20rpx;
  border-radius: 10rpx;
}

.comment-avator{
  width:70rpx;
  height: 70rpx;
  border-radius: 35rpx;
}
.like-icon{
  width: 30rpx;
  height: 30rpx;
  padding-left: 200px;
}

.comment-time{
  font-size: 13px;
  padding: 20rpx 0rpx;
  color: #9b9c9c;
}

.comment-author {
  font-size: 16px;
  padding-left: 10rpx;
}

.subcomment-author{
  font-size: 12px;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding: 10rpx;
  background-color: #f8f8f8;
}

.comment-input {
  position: fixed;
  bottom: 50rpx;
  width: 100%;
  background-color: #fff;
  padding: 10rpx;
  border-top: 1px solid #ddd;
}
