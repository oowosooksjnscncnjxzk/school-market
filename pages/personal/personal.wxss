.container {
  padding-top: 20rpx;
  background-size: cover;
  background-color: #f5f5f5;
}

.header{
  display: flex;
  flex-direction: row;
}

.second{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.third{
  margin-top: 30rpx;
  margin-left: 15rpx;
}

.forth{
  margin-top: 15rpx;
  margin-left: 15rpx;
}

.fith{
  margin-top: 30rpx;
  margin-left: 15rpx;
  margin-left: 30rpx;
}

.user-info {
  display: flex;
  margin-bottom: 20px;
}

.avatar-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  
}

.avatar {
  width: 80px;
  height: 80px;
  border-radius: 40px;
}

.user-details {
  padding-right: 20rpx;
}

.username {
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 10px;
}

.user-meta {
  display: flex;
  flex-wrap: wrap;
}

.user-detail {
  width: 100%;
  font-size: 14px;
  color: rgb(0, 0, 0);
  padding: 15rpx;
}

.signature {
  font-size: 14px;
 
  width: 100%;
}

.edit-profile {
  font-size: 12px;
  color: #19abd8;
}

.user-stats {
  display: flex;
  justify-content: space-around;
  margin-top: 1px;
  border-bottom: 1px solid #eee;
  width: 100%;
}

.stat {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 10px 0;
}

.stat-number {
  font-size: 20px;
  padding-right: 5px;
}

.stat-label {
  font-size: 14px;
  color: #888;
}

.tabs {
  display: flex;
  justify-content: space-around;
  margin-top: 20px;
  width: 100%;
}

.tab {
  padding: 10px;
  cursor: pointer;
}

.tab text.active {
  color: #19abd8;
  font-weight: bold;
}

.posts {
  margin-top: 20px;
}

.region{
  width: 50rpx;
  height: 40rpx;
}
