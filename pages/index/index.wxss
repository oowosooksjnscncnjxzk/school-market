.container {
  padding: 20rpx 0rpx;
  background-color: #f5f5f5;
}


.nav-bar {
  display: flex;
  justify-content: space-around;
  margin-bottom: 5px;
  background-color: #ffffff;
  border-radius: 30rpx;
  border: 3rpx solid #f5f5f5;
  height: 90%;
}

.nav-item {
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-left: 28rpx;
  padding-right: 28rpx;
  padding-top: 8rpx;
  padding-bottom: 8rpx;
}

.nav-icon {
  width: 40px;
  height: 40px;
  margin-bottom: 2px;
}

.search-bar {
  display: flex;
  align-items: center;
  padding: 10px;
  background-color: #ffffff;
  border-radius: 20px;
  margin-bottom: 10px;
  width: 310px;
  height: 30rpx;
  border: 3rpx solid #ffffff;
}

.search-bar input {
  flex: 1;
  border: none;
  outline: none;
  background: transparent;
  margin-left: 10px;
}

.search-icon {
  width: 20px;
  height: 20px;
}

.nav-text{
  font-size: 27rpx;
}
