.container {
  padding: 10rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.info-section {
  width: 90%;
  margin-top: 20rpx;
}

.info-item {
  padding:25rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.input-container {
  display: flex;
  align-items: center;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 300rpx;
}

.input-field {
  margin-right: 80rpx;
  width: 60%;
  padding: 10rpx;
  border: none; /* 移除边框 */
}

.error-text {
  position: absolute;
  color: red;
  font-size: 24rpx;
  left: 230rpx;
  margin-top: 75rpx;
}

