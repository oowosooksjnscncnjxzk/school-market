.container {
  padding: 20rpx;
  background: #ffffff;
  border-radius: 15rpx;
}
.title-input, .content-input {
  width: 90%;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background: #ffffff;
  border-bottom: 1px solid #dddcdc;
}
.image-upload {
  margin-top: 30rpx;
  display: flex;
  flex-wrap: wrap;
  margin-left: 10px;
  margin-bottom: 20rpx;
  background-color: #ffffff;
  align-items: center;
  width: 90%;   
  border-bottom: 1px solid #dddcdc;
  padding: 20rpx;
}
.image-wrapper {
  position: relative;
}
.image-preview {
  width: 100px;
  height: 100px;
  border-radius: 5px;
  margin-right: 5px;
}
.delete-icon {
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  top: 10rpx;
  right: 20rpx;
}
.add-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
  background: #ffffff;
}
.select-circle {
  width: 90%;
  padding: 20rpx;
  border-radius: 10rpx;
  background: #ffffff;
  text-align: center;
  border-bottom: 1px solid #dddcdc;
}

.publish-btn {
  margin: 0;
  height: 80rpx;
  color: rgb(19, 17, 17);
  display: flex;
  text-align: center;
  align-items: center;
  border-radius: 80rpx;
  border:solid 4px #ffffff;
}
.publish-btn[disabled] {
  background-color: #c7c1c9;
  display: flex;
  text-align: center;
  align-items: center;
  border-radius: 80rpx;
  border:solid 4px #ffffff;
}

.bottom{
  width: 90%;
  display: flex;
  justify-content: space-between;
  align-items: center;

  padding: 20rpx;
}
.icon{
  width: 50rpx;
  height: 50rpx;
}
